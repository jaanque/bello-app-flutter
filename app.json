{
  "expo": {
    "name": "Bello",
    "slug": "bello-video-diary",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png", 
    "scheme": "bello",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Bello necesita acceso a la cámara para grabar tus recuerdos diarios.",
        "NSMicrophoneUsageDescription": "Bello necesita acceso al micrófono para grabar audio en tus videos.",
        "NSPhotoLibraryUsageDescription": "Bello necesita acceso a tu galería para guardar y compartir tus videos."
      }
    },
    "android": {
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router", 
      "expo-font", 
      "expo-web-browser",
      "expo-av",
      "expo-camera",
      "expo-media-library",
      "expo-notifications"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}